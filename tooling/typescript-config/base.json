{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@hms/core": ["../../packages/core/src"],
      "@hms/api-client": ["../../packages/api-client/src"],
      "@hms/state": ["../../packages/state/src"],
      "@hms/design-tokens": ["../../packages/design-tokens/src"]
    }
  },
  "exclude": ["node_modules"]
}