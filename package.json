{
  "name": "hms-frontend-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@hms/web",
    "dev:mobile": "turbo run start --filter=@hms/mobile",
    "dev:packages": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@hms/web",
    "build:mobile": "turbo run build --filter=@hms/mobile",
    "build:packages": "turbo run build --filter='./packages/*'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo",
    "install:all": "pnpm install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@hms/mobile && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.14.0",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531"
}
